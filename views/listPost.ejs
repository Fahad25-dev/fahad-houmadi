<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
  <div class="container">
  <div class="d-flex justify-content-between">
    <h1>LIST DES ARTICLES</h1> 
    <a href="/post/add-form" class="btn btn-outline-primary"
    style="margin-top:17px">Ajouter</a>
  </div>
    <table class="table">
     <% if (locals.success != '') { %>
        <div class="alert alert-success" id="success"><%= locals.success %></div>
     <% } %>
     <thead>
         <th>TITLE</th>
         <th>DESCRIPTION</th>
         <th>ACTIONS</th>
     </thead>
     <tbody>
     </tbody>
    </table>
  </div>


  <script>
    let success = '<%= locals.success %>'
    if(success != '') {
        setTimeout(() => {
            document.getElementById('success').style.display = 'none'
        }, 3000);
    }
</script>
</body>
</html>